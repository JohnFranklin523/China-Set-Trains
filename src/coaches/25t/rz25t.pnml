    template_purchase ("coaches", "25t/rz25t")
}

// Vehicle
spriteset (spriteset_rz25t_original, ZOOM_LEVEL_NORMAL, BIT_DEPTH_32BPP) {
    template_standard ("coaches", "25t/rz25t")
}
spriteset (spriteset_rz25t_green, ZOOM_LEVEL_NORMAL, BIT_DEPTH_32BPP) {
